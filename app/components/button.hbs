<button
  class="bg-blue-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline {{if @disabled "opacity-50 cursor-not-allowed" "hover:bg-blue-700"}}"
  type={{if @type @type "button"}}
  disabled={{@disabled}}
  ...attributes
  {{on "click" this.onClick}}
>
  {{yield}}
</button>