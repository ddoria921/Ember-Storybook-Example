{{#if @label}}
  <label class="block text-gray-700 text-sm font-bold mb-2" for={{@id}}>
    {{@label}}
  </label>
{{/if}}

<Input
  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline {{if @disabled "opacity-50 cursor-not-allowed"}}"
  id={{@id}}
  disabled={{@disabled}}
  @type={{@type}}
  @value={{@value}}
  @enter={{@enterPressed}}
  {{on "input" this.handleInput}}
  ...attributes
/>